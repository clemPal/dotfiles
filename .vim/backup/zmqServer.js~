var zmq = require('zmq'), 
	ubi = require('ubiutils');

var log = ubi.log('zmqServer'),
	sock = zmq.socket('pair');

module. exports = {

start: function(address){
			   sock.bindSync(address);
			   log.info('Producer bound to port '+address);

			   setInterval(function(){
							   log.info('sending work');
							   emitSock.send('some work');	  
							   }, 500);

			   sock.on('message', function(msg){
							   log.info('work: %s', msg.toString());
							   });
	   }
}
